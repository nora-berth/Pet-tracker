    {
      "name": "Get Pet by ID",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {\r",
              "    pm.response.to.have.status(200);\r",
              "});\r",
              "\r",
              "pm.test(\"Pet ID matches\", function () {\r",
              "    var jsonData = pm.response.json();\r",
              "    pm.expect(jsonData.id).to.equal(parseInt(pm.environment.get(\"petId\")));\r",
              "});\r",
              "\r",
              "pm.test(\"Pet name is correct\", function () {\r",
              "    var jsonData = pm.response.json();\r",
              "    pm.expect(jsonData.name).to.equal('API Test Pet');\r",
              "});\r",
              "\r",
              "pm.test(\"All required fields present\", function () {\r",
              "    var jsonData = pm.response.json();\r",
              "    pm.expect(jsonData).to.include.all.keys(\r",
              "        'id', 'name', 'species', 'created_at', 'updated_at'\r",
              "    );\r",
              "});"
